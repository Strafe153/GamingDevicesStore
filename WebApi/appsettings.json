{
  "Appsettings": {
    "Token": "sMVYEW9D8qjngdYG"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=gaming_store_db;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss}, {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../WebApi/bin/Debug/net6.0/logs/GamingStore.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss}, {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
